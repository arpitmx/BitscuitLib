<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fetcher"


        />

    <TextView
        android:id="@+id/ncsdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/psemibold"
        android:text="New Update Available"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:textColor="#DD000000"
        android:textSize="22dp"

        />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pmedium"
        android:text="Version code : 7.5.1v"
        android:minHeight="50dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_white_curved"
        android:textColor="#DC000000"
        android:textSize="16dp"

        />

    <TextView
        android:id="@+id/changeLogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/pmedium"
        android:text="
* Use special camera effects to bring your video to life, including background music, face filters, & stickers
\n* Upload your creative video clips and get discovered on Explore
\n* Explore millions of videos
\n* Watch & share any Instagram Reels video with your friends
"
        android:minHeight="50dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_white_curved"
        android:textColor="#DC000000"
        android:textSize="16dp"

        />


        />

    <ProgressBar
        android:id="@+id/formProg"
        style="?android:attr/progressBarStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="#F30069E9"
        android:visibility="gone"
      />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_pressed"
        android:drawableTint="@color/white"
        android:elevation="5dp"
        android:fontFamily="@font/pregular"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
       />


</androidx.appcompat.widget.LinearLayoutCompat>